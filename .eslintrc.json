{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-func-assign": "off",
      "no-class-assign": "off",
      "no-loop-func": "off",
      "object-shorthand": 0,
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "no-nested-ternary": "off",
      "import/extensions": [ 1, {
        "js": "always", "json": "always"
      }]
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }